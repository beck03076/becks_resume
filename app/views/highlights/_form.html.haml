= form_for @highlight do |f|
  - if @highlight.errors.any?
    #error_explanation
      %h2= "#{pluralize(@highlight.errors.count, "error")} prohibited this highlight from being saved:"
      %ul
        - @highlight.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :link
    = f.text_area :link
  .field
    = f.label :desc
    = f.text_area :desc
  .field
    = f.label :created_by
    = f.number_field :created_by
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
