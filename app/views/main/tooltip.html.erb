<script>
$(function(){
    tTip = '.geekSquadToolTip';
    $('div.openbox-geeksquad-puck').hover(function(){onHvr(tTip,this)},
                                          function(){offHvr(tTip,this)});
});


function onHvr(cl,obj){
  var tTipHtml = $(cl + 'Wrapper').html();
  $(obj).after(tTipHtml);
  $(obj).siblings(cl).css('display', 'block');
}

function offHvr(cl,obj){
  $(obj).siblings(cl).remove();
}

</script>
